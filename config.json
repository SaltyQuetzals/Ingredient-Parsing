{
    "dataset_reader": {
        "type": "sequence_tagging",
        "token_delimiter": "\t",
        "token_indexers": {
            "token_characters": {
                "type": "characters",
                "character_tokenizer": {
                    "lowercase_characters": true
                }
            },
            "tokens": {
                "type": "single_id",
                "lowercase_tokens": true
            }
        }
    },
    "iterator": {
        "type": "bucket",
        "sorting_keys": [
            [
                "tokens",
                "num_tokens"
            ]
        ]
    },
    "model": {
        "type": "crf_tagger",
        "encoder": {
            "type": "lstm",
            "bidirectional": true,
            "hidden_size": 90,
            "input_size": 90,
            "num_layers": 5
        },
        "label_encoding": "BIO",
        "text_field_embedder": {
            "type": "basic",
            "token_embedders": {
                "token_characters": {
                    "type": "character_encoding",
                    "embedding": {
                        "embedding_dim": 10
                    },
                    "encoder": {
                        "type": "cnn",
                        "embedding_dim": 10,
                        "num_filters": 10
                    }
                },
                "tokens": {
                    "embedding_dim": 50
                }
            }
        }
    },
    "train_data_path": "data/train.seqtags",
    "validation_data_path": "data/valid.seqtags",
    "test_data_path": "data/test.seqtags",
    "trainer": {
        "type": "default",
        "cuda_device": 0,
        "optimizer": {
            "type": "adam"
        },
        "patience": 2,
        "should_log_learning_rate": true,
        "should_log_parameter_statistics": true
    }
}